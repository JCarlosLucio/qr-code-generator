{
  "name": "qr-code-generator",
  "version": "0.0.1",
  "private": true,
  "description": "Simple Qr Generator",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JCarlosLucio/qr-code-generator.git"
  },
  "keywords": [
    "qr",
    "generator"
  ],
  "author": "Juan Carlos Lucio",
  "bugs": {
    "url": "https://github.com/JCarlosLucio/qr-code-generator/issues"
  },
  "homepage": "https://github.com/JCarlosLucio/qr-code-generator#readme",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "dev": "vite --open",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint:fix": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
    "lint:format": "prettier  --loglevel warn --write \"./**/*.{js,jsx,ts,tsx,css,md}\" ",
    "lint": "npm run lint:format && npm run lint:fix ",
    "type-check": "tsc"
  },
  "dependencies": {
    "daisyui": "^2.17.0",
    "qrcode": "^1.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/qrcode": "^1.4.2",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "postcss": "^8.4.14",
    "pre-commit": "^1.2.2",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "tailwindcss": "^3.1.3",
    "typescript": "^4.7.3",
    "vite": "^2.9.12",
    "vite-tsconfig-paths": "^3.5.0"
  },
  "pre-commit": "lint",
  "license": "ISC"
}
